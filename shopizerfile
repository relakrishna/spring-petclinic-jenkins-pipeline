pipeline {
    agent {label "OPENJDK-11-JDK"}
    triggers {
        pollSCM('H * * * *')
    }
    stages {
        stage('pull from vcs') {
            steps {
                 git url: "https://github.com/relakrishna/spring-petclinic-jenkins-pipeline.git",
                 branch: 'shopizer'
            }
        }
        stage('build') {
            steps {
                sh 'mvn package'
            }
        }
        
    }
}